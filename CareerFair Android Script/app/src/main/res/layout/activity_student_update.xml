<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        tools:context="com.example.reddy.careerfair.Student_update">

        <TextView
            android:id="@+id/welcome_view_9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="UPDATE DETAILS"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="40dp" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/str_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <EditText
                android:id="@+id/sr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/str_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ti_email"
            android:layout_margin="20dp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@android:color/white">

            <EditText
                android:id="@+id/sr_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:inputType="text"
                android:textColor="@android:color/background_light" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_view_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Degree"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textColor="@android:color/background_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox android:id="@+id/checkbox_senior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_light" />

                <CheckBox
                    android:id="@+id/checkbox_masters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_light"
                    android:text="Masters" />

                <CheckBox
                    android:id="@+id/checkbox_phd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_light"
                    android:text="Phd" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_view_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skills"
                android:layout_margin="20dp"
                android:textSize="20dp"
                android:textColor="@android:color/background_light"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox android:id="@+id/checkbox_java"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Java"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_light" />

                <CheckBox
                    android:id="@+id/checkbox_python"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_light"
                    android:text="Python" />

                <CheckBox
                    android:id="@+id/checkbox_Mongo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="20dp"
                    android:textColor="@android:color/background_light"
                    android:text="Mongo" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/su_button"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="50dp"
            android:textSize="20dp"
            android:background="@color/colorAccent"
            android:textColor="@android:color/background_light"
            android:onClick="stdUpdate"
            android:text="Update Profile" />


    </LinearLayout>
</ScrollView>
